<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xjtu26.Gou.escapecard.MainActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="10dp" >

        <ImageView
            android:id="@+id/AI_hand_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/AI_hand_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/AI_hand_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/AI_hand_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="10dp" >

        <ImageView
            android:id="@+id/AI_desk_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:src="@drawable/level_card" />

        <ImageView
            android:id="@+id/AI_desk_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:src="@drawable/level_card" />

        <ImageView
            android:id="@+id/AI_desk_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:src="@drawable/level_card" />

        <ImageView
            android:id="@+id/AI_desk_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:src="@drawable/level_card" />

        <ImageView
            android:id="@+id/AI_desk_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:src="@drawable/level_card" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="10dp" >

        <ImageView
            android:id="@+id/desk_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/level_card"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/desk_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/level_card"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/desk_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/level_card"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/desk_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/level_card"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/desk_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/level_card"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/desk_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/level_card"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/desk_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/level_card"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/desk_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/level_card"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/desk_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/level_card"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"     
        android:layout_gravity="center_horizontal"
        android:paddingBottom="10dp" >

        <ImageView
            android:id="@+id/PL_desk_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:src="@drawable/level_card" />

        <ImageView
            android:id="@+id/PL_desk_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:src="@drawable/level_card" />

        <ImageView
            android:id="@+id/PL_desk_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:src="@drawable/level_card" />

        <ImageView
            android:id="@+id/PL_desk_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:src="@drawable/level_card" />

        <ImageView
            android:id="@+id/PL_desk_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:src="@drawable/level_card" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="10dp" >

        <ImageView
            android:id="@+id/PL_hand_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/level_card" />

        <ImageView
            android:id="@+id/PL_hand_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/level_card" />

        <ImageView
            android:id="@+id/PL_hand_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/level_card" />

        <ImageView
            android:id="@+id/PL_hand_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/level_card" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_play"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|left"
            android:background="@drawable/button_state"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/button_play"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_pass"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|right"
            android:background="@drawable/button_state"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/button_pass"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
    </FrameLayout>

</LinearLayout>